<!--pages/plan-edit/components/title/title.wxml-->
<view class="title">
  <view class="main">
    <view class="main-wrap">
      <view class="check-wrap">
        <ident checked="{{finished}}" bind:identTap="handleToChangeState" />
      </view>
      <view class="main-title">
        <input class="main-input-title {{finished ? 'finished-title':''}}"
          value="{{mainTitle}}" 
          maxlength="{{maxlength}}" 
          bindblur="handleToInputBlur"></input>
      </view>  
    </view>
  </view>
</view>