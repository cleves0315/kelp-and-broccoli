/* pages/plan-edit/components/picker-time/picker-time.wxss */
@keyframes show {
  0% {
    visibility: hidden;
  }
  100% {
    visibility: visible;
  }
}
.show {
  animation: show .2s linear forwards;
}
@keyframes hide {
  0% {
    visibility: visible;
  }
  100% {
    visibility: hidden;
  }
}
.hide {
  animation: hide .2s linear forwards;
}

@keyframes showbox {
  0% {
    transform: translateY(100%);
  }
  100% {
    transform: translateY(0);
  }
}
.showbox {
  animation: showbox .2s linear forwards;
}

@keyframes hidebox {
  0% {
    transform: translateY(0);
  }
  100% {
    transform: translateY(100%);
  }
}
.hidebox {
  animation: hidebox .2s linear forwards;
}

.picker-time {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9;
  background: rgba(0, 0, 0, .4);
}

.container {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #FAFAFA;
  overflow: hidden;
  border-radius: 20rpx 20rpx 0 0;
}

.marking-wrap {
  background: #fff;
  padding-top: 16rpx;
}

.marking-line {
  width: 66rpx;
  height: 8rpx;
  background: #8D8D8D;
  border-radius: 100rpx;
  margin: 0 auto;
}

.header {
  position: relative;
  padding: 20rpx 0;
  background: #fff;
}

.header .left,
.header .right {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
}

.header .left {
  left: 20rpx;
  font-size: 32rpx;
  color: #07b45b;
}

.header .right {
  right: 20rpx;
}

.header .left-icon {
  width: 40rpx;
  height: 40rpx;
}

.header .right-txt {
  font-size: 32rpx;
  font-weight: 500;
  color: #07b45b;
}

.header .title {
  text-align: center;
  font-weight: 500;
  font-size: 36rpx;
}