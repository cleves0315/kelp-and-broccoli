<!--pages/my-plan/components/plan-list/plan-list.wxml-->
<view class="plan-list">
  <view class="container">
    <block wx:if="{{list.length > 0}}" wx:for="{{list}}" wx:key="id">
      <view class="plan-item" bindtap="handleToTap" data-data="{{item}}">
        <view class="funt-wap">
          <ident checked="{{item.finish ? true : false}}" detail="{{item}}" bind:identTap="handleToIdentTap" />
        </view>
        <view class="content-wrap">
          <view class="title">{{item.title}}</view>
          <view class="detail">{{item.detail || '暂无计划详情'}}</view>
        </view>
      </view>
    </block>
  </view>
</view>