/* pages/my-plan/components/plan-list/plan-list.wxss */
.container {
  padding: 40rpx 20rpx;
}

.plan-item {
  display: flex;
  padding: 30rpx;
  background: #fff;
  border-radius: 10px;
  margin-bottom: 30rpx;
  box-shadow: 0 5px 10px rgba(0, 0, 0, .05);
}

.content-wrap {
  flex: 1;
}

.content-wrap .title {
  font-size: 32rpx;
  font-weight: 700;
}

.content-wrap .detail {
  font-size: 24rpx;
  color: #ADB0B9;
  margin-top: 20rpx;
}

.tips {
  position: fixed;
  top: 40%;
  left: 0;
  right: 0;
  text-align: center;
  color: #888;
  font-size: 28rpx;
}

.funt-wap {
  align-self: center;
  margin-right: 30rpx;
}