<!--miniprogram/pages/my-plan/my-plan.wxml-->
<view class="my-plan">
  <view class="container" style="padding-bottom: 380rpx;">
    <navigation-bar title="我的一天" bind:tapleftside="handleToBackNavigation" />
    <header title="{{headerTitle}}" background="#70C59E" bubColor="#70C59E" />
    <plan-list list="{{planList}}" bind:btnchange="handleToChangePlan" bind:tapItem="handleToTapPlanItem" />
    <floot-input-box id="flootInput" isIphoneX="{{isIphoneX}}" background="transparent" bind:confim="handleCreatPlan" />
  </view>
</view>
