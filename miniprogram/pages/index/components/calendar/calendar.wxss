/* pages/index/components/calendar/calendar.wxss */
.calendar {
  display: flex;
  height: 100%;
  flex-direction: column;
}

.header {
  margin: 20rpx 0;
}

.header .title {
  text-align: center;
  font-weight: 700;
  font-size: 36rpx;
}


.calendar-swiper {
  height: calc((100vw / 7) * 6);
}


.week-line,
.calendar-case .calendar-week-line {
  display: flex;
}

.week-line .item,
.calendar-case .calendar-week-line .day-wrap {
  display: flex;
  width: calc(100vw / 7);
  height: calc(100vw / 7);
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.week-line {
  border-top: 2rpx solid #c0c4c7;
  border-bottom: 2rpx solid #939597;
}

.week-line .item {
  /* font-weight: 700; */
  height: 80rpx;
  color: #939597;
}


.calendar-case .day-last .day,
.calendar-case .day-next .day {
  color: #ADAFB1;
}